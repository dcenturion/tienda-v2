{% extends 'layouts/_master.twig' %}

{% block main %}

    <!-- begin content -->
    <div class="row app-container">
        <div class="col-xs-12">

            <br />
            <br />

            <div class="center-block shopping-cart-center-block">

                {# Creando el formulario de recuperación de cuenta #}
                <div class="row shopping-cart-product-list">
                    <div class="col-xs-12">

                        <div class="row">
                            <div class="col-xs-12 text-center">
                                <br />
                                <h1><strong>Ingresa tu nueva contraseña</strong></h1>
                                <br/>
                                <br/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">

                                {# Formulario de recuperación de cuenta #}
                                <form class="row" method="post" action="/user/recover-account">
                                    <div class="col-xs-12">

                                        <div class="row">
                                            <div class="col-xs-10 col-sm-6 col-xs-offset-1 col-sm-offset-3">

                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <div class="form-group">
                                                            <input type="password" name="password" class="form-control" placeholder="Nueva contraseña">
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12">
                                                        <div class="form-group">
                                                            <input type="password" name="repeated-password" class="form-control" placeholder="Repetir nueva contraseña">
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 text-right">
                                                        <div class="form-group">
                                                            <button type="submit" class="btn btn-confirm text-uppercase">
                                                                <strong>Recuperar</strong>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>

                <br />
                <br />
                <br />

            </div>
        </div>
    </div>
    <!-- end content -->

{% endblock main %}