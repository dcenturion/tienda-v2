{# Creando vista del producto de tipo curso virtual #}
<div class="row product-view">
    <div class="col-xs-12">

        <div class="row">
            <div class="col-xs-12 col-sm-4">
                <ul class="list-group">
                    <li class="list-group-item text-center">
                        <div class="row">
                            <div class="col-xs-6 col-sm-12">
                                <img class="img-responsive" id="product-image-viewer" src="/_vistas/theme/eguru-2017/images/product-image-sample-5.jpg" alt="Product image">
                            </div>
                            <div class="col-xs-6 col-sm-12">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <br />

                                        {# Creando el slider de miniaturas del producto #}
                                        <div class="slider-thumbnail-container">
                                            <div class="slider-thumbnail">

                                                {###############################################}
                                                {# Información de demostración sobre productos #}
                                                {% set slides = [5, 7, 8, 9, 10] %}
                                                {###############################################}

                                                {% for slide in slides %}

                                                    <div class="slide">
                                                        <a target="_blank" href="javascript:null">
                                                            <img class="img-responsive" src="/_vistas/theme/eguru-2017/images/product-image-sample-{{ slide }}.jpg" alt="Product thumbnail image">
                                                        </a>
                                                    </div>

                                                {% endfor %}

                                            </div>

                                            <br />
                                            <br />

                                            <script>
                                                $(document).ready(function () {
                                                    var $productImageViewer = $('#product-image-viewer');
                                                    var $sliderThumbnailContainer = $('.slider-thumbnail-container');

                                                    $(".slider-thumbnail").bxSlider({
                                                        minSlides: 3,
                                                        maxSlides: 3,
                                                        slideWidth: 156,
                                                        slideMargin: 12,
                                                        moveSlides: 1,
                                                        pager: true,
                                                        preloadImages: 'all',
                                                        speed: 300,
                                                        infiniteLoop: false,
                                                        hideControlOnEnd: true
                                                    });

                                                    $sliderThumbnailContainer.find('a').click(function () {
                                                        var $img = $(this).find('img');

                                                        $productImageViewer.attr('src', $img.attr('src'));
                                                    });
                                                });
                                            </script>
                                        </div>

                                    </div>
                                    <div class="col-xs-12">
                                        <br />

                                        <a href="/" class="btn btn-wish"><i class="icon-heart"></i></a>
                                        <a href="/" class="btn btn-share"><i class="icon-share-square"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="page-header">
                            <div class="row">
