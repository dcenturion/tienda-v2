{# Línea de compra #}
<div class="row checkout-line">
    <div class="col-xs-12">

        <div class="row">
            <div class="col-xs-4 checkout-step {{ step == 1 or step is not defined ? "active" : "completed" }} text-center">
                <div class="progress">
                    <div class="progress-bar"></div>
                </div>
                <a href="/shopping-cart" class="checkout-step-circle"><strong>1</strong></a>
                <span>Verifica tus datos</span>
            </div>
            <div class="col-xs-4 checkout-step {{ step == 2 ? "active" : step > 2 ? "completed" }} text-center">
                <div class="progress">
                    <div class="progress-bar "></div>
                </div>
                <a href="/shopping-cart/checkout" class="checkout-step-circle"><strong>2</strong></a>
                <span>Información de pago</span>
            </div>
            <div class="col-xs-4 checkout-step {{ step == 3 ? "active" }} text-center">
                <div class="progress">
                    <div class="progress-bar"></div>
                </div>
                <a class="checkout-step-circle"><strong>3</strong></a>
                <span>¡Listo!</span>
            </div>
        </div>

    </div>
</div>