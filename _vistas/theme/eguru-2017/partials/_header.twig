{# Script de demostración (Debe ser modificado o eliminado obligatoriamente) #}
<script>
    $(document).ready(function () {
        $('#modal-recover-account .btn-confirm').on('click', function (e) {
            $('#modal-recover-account').modal('hide');
        });
        $('#modal-recover-account-error .btn-confirm').on('click', function (e) {
            $('#modal-recover-account-error').modal('hide');
        });
    });
</script>
